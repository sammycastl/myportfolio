---
const { 
  title, 
  description, 
  icon, 
  tags, 
  links = [], 
  architecture = null 
} = Astro.props;

// Funci√≥n para obtener el √≠cono seg√∫n el tipo de link
const getLinkIcon = (type) => {
  switch(type) {
    case 'github': return 'üêô';
    case 'live': return 'üåê';
    default: return 'üîó';
  }
};
---

<article class="project-card">
  <div class="project-icon">{icon}</div>
  <div class="project-content">
    <h3>{title}</h3>
    <p>{description}</p>
    
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>

    {architecture && (
      <button class="arch-button" onclick={`showArchitecture('${architecture}')`}>
        üèóÔ∏è Ver Arquitectura
      </button>
    )}

    {links.length > 0 && (
      <div class="links-container">
  {links.length > 0 && (
    <>
      <h4 class="links-title">Enlaces Relacionados:</h4>
      <div class="link-items">
        {links.map((link, index) => (
          <a 
            href={link.url} 
            target="_blank" 
            class="link-button"
            data-type={link.type}
            rel="noopener noreferrer"
          >
            {getLinkIcon(link.type)} 
            <span>{link.name || (link.type === 'github' ? 'Repositorio' : 'Demo Live')}</span>
          </a>
        ))}
      </div>
    </>
  )}
</div>
    )}
  </div>
</article>
<style>
  .project-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border-left: 4px solid #2A5C9A;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .links-container {
    margin-top: auto; /* Empuja los links hacia abajo */
    padding-top: 1rem;
  }

  .link-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .link-button {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.5rem 0.8rem;
    background: #f0f7ff;
    color: #2A5C9A;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.85rem;
    transition: all 0.2s ease;
    border: 1px solid #dbeafe;
  }

  .link-button:hover {
    background: #2A5C9A;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 2px 4px rgba(42, 92, 154, 0.2);
  }

  /* Estilos espec√≠ficos para tipos de links */
  .link-button[data-type="github"] {
    background: #f5f5f5;
    color: #333;
  }

  .link-button[data-type="github"]:hover {
    background: #333;
    color: white;
  }

  .link-button[data-type="live"] {
    background: #f0fdf4;
    color: #166534;
    border-color: #bbf7d0;
  }

  .link-button[data-type="live"]:hover {
    background: #166534;
    color: white;
  }

  /* Mejora para los tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin: 1rem 0;
  }

  .tag {
    background: #f0f7ff;
    color: #2A5C9A;
    padding: 0.3rem 0.6rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
  }
</style>