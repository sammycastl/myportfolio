<style>
  /* Estilos generales */
  .contact-section {
    padding: 3rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }
  .title {
    text-align: center;
    font-size: 2.5rem;
    color: #2A5C9A;
    margin-bottom: 0.5rem;
  }
  .subtitle {
    text-align: center;
    color: #666;
    margin-bottom: 3rem;
  }

  /* Grid de contacto */
  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    padding: 0 2rem;
  }

  /* Formulario WhatsApp */
  .whatsapp-form {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Tarjeta de informaci√≥n */
  .info-card {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  .info-card h3 {
    color: #2A5C9A;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .info-card a {
    color: #333;
    text-decoration: none;
    transition: color 0.3s;
  }
  .info-card a:hover {
    color: #2A5C9A;
  }

  /* Mapa */
  .map {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Bot√≥n WhatsApp */
  .submit-button {
    background: #25D366;
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
  }
  .submit-button:hover {
    background: #128C7E;
  }

  /* Redes sociales */
  .social-links {
    display: flex;
    gap: 1.5rem;
    margin-top: 2rem;
  }
  .icon {
    width: 24px;
    height: 24px;
    fill: #2A5C9A;
    transition: transform 0.3s;
  }
  .icon:hover {
    transform: scale(1.2);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-container {
      grid-template-columns: 1fr;
    }
  }
</style>