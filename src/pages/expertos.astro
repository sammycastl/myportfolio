    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #e2e8f0;
  }
  .button {
    background: #2A5C9A;
    color: white;
    padding: 0.8rem 1.8rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.3s;
  }
  .button:hover {
    transform: translateY(-2px);
  }
  .button-outline {
    border: 2px solid #2A5C9A;
    color: #2A5C9A;
    padding: 0.8rem 1.8rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
  }
  .button-outline:hover {
    background: #f0f7ff;
  }

  /* Responsive */
