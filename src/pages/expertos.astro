    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.5rem;
    background: #1a1a2e;
    color: white;
    border-radius: 6px;
    text-decoration: none;
    transition: transform 0.3s;
  }
  .repo-button:hover {
    transform: translateY(-2px);
    background: #2A5C9A;
  }

  /* Botones */
