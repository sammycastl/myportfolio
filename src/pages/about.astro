<style>
  /* Estilos generales */
  .about-section {
    padding: 3rem 0;
  }
  .about-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    padding: 0 2rem;
  }

  /* Foto de perfil */
  .about-photo img {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  .quick-info {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    margin-top: 1.5rem;
  }
  .quick-info ul {
    list-style: none;
    padding: 0;
  }
  .quick-info li {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Contenido principal */
  .title span {
    color: #2A5C9A; /* Color primario */
  }
  .bio p {
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  /* Habilidades */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
  }
  .skill-category ul {
    list-style: none;
    padding: 0;
  }
  .skill-category li {
    background: #f1f5f9;
    padding: 0.5rem 1rem;
    margin-bottom: 0.5rem;
    border-radius: 4px;
  }

  /* Botones */
  .cta {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  .button {
    background: #2A5C9A;
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
  }
  .button-outline {
    border: 2px solid #2A5C9A;
    color: #2A5C9A;
    padding: 0.8rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .about-container {
      grid-template-columns: 1fr;
    }
  }
</style>